<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectGuid>{6AC34B34-5D31-46BD-B354-6F176378E5AB}</ProjectGuid>
    <EnableDefaultItems>False</EnableDefaultItems>
    <OutputType>Library</OutputType>
    <TargetFramework>net472</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>ILReader.DebuggerVisualizer</RootNamespace>
    <AssemblyName>ILReader.DebuggerVisualizer.17.0</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <EmbeddedResourceUseDependentUponConvention>False</EmbeddedResourceUseDependentUponConvention>
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.DebuggerVisualizers" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Analyzer\Analyzer.csproj" />
    <ProjectReference Include="..\Core\Core.csproj" />
    <ProjectReference Include="..\Visualizer\Visualizer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="DebuggerSide.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup Condition=" '$(Configuration)' == 'Debug' ">
    <Compile Include="Tests\Visualizers.cs" />
    <PackageReference Include="NUnit" />
    <PackageReference Include="NUnit3TestAdapter" />
  </ItemGroup>

  <PropertyGroup>
    <InstallVisualizer>true</InstallVisualizer>
    <VisualizerInstallDir>$(USERPROFILE)\My Documents\Visual Studio 2022\Visualizers</VisualizerInstallDir>
  </PropertyGroup>
  <Target Name="InstallVisualizerToVS" AfterTargets="Build" Condition="'$(InstallVisualizer)' == 'true'">
    <MakeDir Directories="$(VisualizerInstallDir)" Condition="!Exists('$(VisualizerInstallDir)')" />
    <Copy SourceFiles="$(TargetDir)FastAccessors.dll" DestinationFolder="$(VisualizerInstallDir)\" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(TargetDir)ILReader.Core.dll" DestinationFolder="$(VisualizerInstallDir)\" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(TargetDir)ILReader.Visualizer.dll" DestinationFolder="$(VisualizerInstallDir)\" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(TargetDir)ILReader.Analyzer.dll" DestinationFolder="$(VisualizerInstallDir)\" SkipUnchangedFiles="true" />
    <Copy SourceFiles="$(TargetDir)ILReader.DebuggerVisualizer.17.0.dll" DestinationFolder="$(VisualizerInstallDir)\" SkipUnchangedFiles="true" />
  </Target>
</Project>